<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-lg-8">
      <div class="card-trip">
        <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="card-trip-infos">
          <div class="row">
            <div class="col-lg-6">
              <div class="d-flex align-items-center mb-3"> <h5>Model: </h5><p><%= "#{@car.brand} #{@car.model}" %></p></div>
              <div class="d-flex align-items-center mb-3"> <h5>Power: </h5><p><%= "#{@car.power} ch" %></p></div>
              <div class="d-flex align-items-center"> <h5>Carburant: </h5><p><%= @car.carburant %></p></div>
            </div>
            <div class="col-lg-6">
              <div class="d-flex align-items-center mb-3"> <h5>Seats: </h5><p><%= @car.seats %></p></div>
              <div class="d-flex align-items-center mb-3"> <h5>Kilometers: </h5><p><%= @car.km %></p></div>
              <div class="d-flex align-items-center"> <h5>Year: </h5><p><%= @car.year %></p></div>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-5">
        <h2>Description</h2>
        <p><%= @car.description %></p>
      </div>

    </div>
    <div class="col-lg-4">
      <% if @car.user != current_user %>
        <div class="form" data-controller="total-price", data-total-price-cost-value="<%=@car.price_per_day%>">
        <%= simple_form_for [@car, @booking] do |f| %>
          <div class="d-flex align-items-center">
            <h3 class="mb-4"><%= "#{@car.price_per_day}â‚¬ / day" %></h3>
          </div>
          <div class="d-flex" style="gap: 20px;">
            <%= f.input :start_date,
              as: :string,
              input_html: { data: { controller: "datepicker", total_price_target: "start_date" } }%>
            <%= f.input :end_date,
              as: :string,
              input_html: { data: { controller: "datepicker", action: "input->total-price#display", total_price_target: "end_date" } } %>
          </div>
          <div class="d-flex justify-content-center"><%= f.submit "Book", class:"button-perso"%></div>
          <hr class="mt-3 mb-3">
          <div class="d-flex justify-content-between">
            <div><h3>Total</h3></div>
            <div><h3 data-total-price-target="text"></h3></div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-lg-8">
      <h2>Reviews</h2>
      <% @car.reviews.each do |review| %>
      <div class="d-flex align-items-center">
        <h5 class="avatar-letter"><%= review.user.first_name.chars.first.capitalize %></h5>
        <h6><%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize}" %></h6>
      </div>
        <p><%= review.rating %></p>
        <p><%= review.comment %></p>
      <% end %>
    </div>
    <div class="col-lg-4" data-controller="toggle">
      <button class="btn btn-outline-secondary mb-4" data-action="click->toggle#fire">
        <h2>Review that car</h2>
      </button>
      <div class="form d-none" data-toggle-target="form">
        <%= simple_form_for [@car, @review] do |f| %>
          <%= f.input :rating, collection: (1..5)  %>
          <%= f.input :comment %>
          <%= f.submit "Review"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
