<div class="container mt-5">
  <div class="row">
    <div class="col-lg-9">
      <div class="card-trip">
        <%= image_tag "porsche-911-turbo-720x405px.jpg" %>
        <div class="card-trip-infos">
          <div class="row">
            <div class="col-lg-6">
              <div class="d-flex align-items-center mb-3"> <h5>Model: </h5><p><%= "#{@car.brand} #{@car.model}" %></p></div>
              <div class="d-flex align-items-center mb-3"> <h5>Power: </h5><p><%= "#{@car.power} ch" %></p></div>
              <div class="d-flex align-items-center"> <h5>Carburant: </h5><p><%= @car.carburant %></p></div>
            </div>
            <div class="col-lg-6">
              <div class="d-flex align-items-center mb-3"> <h5>Seats: </h5><p><%= @car.seats %></p></div>
              <div class="d-flex align-items-center mb-3"> <h5>Kilometers: </h5><p><%= @car.km %></p></div>
              <div class="d-flex align-items-center"> <h5>Year: </h5><p><%= @car.year %></p></div>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-5">
        <h2>Description</h2>
        <p><%= @car.description %></p>
      </div>

    </div>
    <div class="col-lg-3">
      <h2>There will be the booking form</h2>
    </div>
  </div>
</div>
          </div>
