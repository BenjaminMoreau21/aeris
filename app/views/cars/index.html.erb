<link rel="stylesheet" href="app/assets/stylesheets/style.css" />

<div class="card-trip-index-container container mt-5">
<% @cars.each do |car| %>
<%= link_to car_path(car),  style: "text-decoration: none" do %>
<div class="card-trip-index">
  <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="card-trip-index-infos">
    <div>
      <div class="card-trip-index-box1">
      <h2><%= car.brand %>  <%= car.model %></h2>
      <p><%= image_tag 'icon_seat.png', height: 20 %><%= car.seats %></p>
      </div>
    </div>
    <div class="card-trip-index-box2">
    <% unless car.reviews.empty? %>
      <p class="card-trip-index-rating">â˜† <%= car.reviews.map(&:rating).sum / car.reviews.size %></p>
    <% end %>
    <h2 class="card-trip-index-pricing"><%= car.price_per_day %>/day</h2>
    </div>
  </div>
</div>
<% end %>
<% end %>

</div>
